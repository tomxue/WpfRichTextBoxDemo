<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <RichTextBox x:Name="rtb" Width="300" Height="50" SelectionChanged="RichTextBox_SelectionChanged"></RichTextBox>
        <Button Content="Reset" FontSize="20" Click="ResetButton_Click" Width="100" Height="50" Margin="0 100 0 0"></Button>
        <Button Content="GetContent" FontSize="18" Click="GetContentButton_Click" Width="100" Height="50" Margin="0 200 0 0"></Button>
    </Grid>
</Window>
